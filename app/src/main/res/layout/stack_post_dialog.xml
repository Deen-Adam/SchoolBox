<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_player"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:theme="@style/Toolbar"
        app:popupTheme="@style/ToolbarPopUp"
        style="@style/Topeka.TextAppearance.Title"
        android:background="@color/topeka_primary"
        android:elevation="@dimen/elevation_header"/>

    <android.support.design.widget.TextInputLayout
        android:paddingTop="@dimen/card_margin"
        android:id="@+id/stack_layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/input_stack_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:hint="@string/stack_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:paddingTop="@dimen/card_margin"
        android:id="@+id/stack_layout_script"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/input_stack_script"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:singleLine="false"
            android:hint="@string/stack_script"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

    </android.support.design.widget.TextInputLayout>


</LinearLayout>

